<h3><%= t('edit_post')%></h3>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
	
	<% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger"><%= msg %></div>
        <% end %>  
  	<% end %>

	<p>
		<%= f.label :title, t('title') %><br>
		<%= f.text_field(:title, {:class => 'form-control'}) %>
	</p>

	<p>
		<%= f.label :body, t('body') %><br>
		<%= f.text_area(:body, {:class => 'form-control'})  %>
	</p>

	<p>
		<%= f.label :Category, t('category') %><br>
		<%= f.collection_select(:category_id, CategoryType.all, :id, :category_name, {:selected => @post.category_id.to_i}, {class: 'form-control'})%>
	</p>

	<p>
		<%= f.label :Image, t('feature_image') %><br>
		<%= f.file_field(:feature_image) %>
	</p>

	<p>
		<%= f.submit({:class => 'btn btn-primary'})%>
	</p>

<% end %>

