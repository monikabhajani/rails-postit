<!DOCTYPE html>
<html>
  <head>
    <title>Post IT</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/javascripts/jquery.min.js"></script>
    
    <link rel="stylesheet" href="/css/style.css">
  </head>

  <body>

    <nav class="navbar navbar-default">
        <div class="container">

            <div class="navbar-header">

              <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false">
                <span class="sr-only">Toggle Navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">PostIt</a>
            </div>

            <div id="navbar" class="collapse navbar-collapse">

              <ul class="nav navbar-nav">
                  <li><%= link_to t('feeds'), home_path %></li>
                  <li><%= link_to t('create_post'), new_post_path %></li>
              </ul>

              <ul class="nav navbar-nav navbar-right">
                  <p class="navbar-text float-right">
                    <% if user_signed_in? %>
                      Logged in as <strong><%= current_user.email %></strong>.
                      <%= link_to t('edit_profile'), edit_user_registration_path, :class => 'navbar-link' %> |
                      <%= link_to t('logout'), destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                    <% else %>
                      <%= link_to t('sign_up'), new_user_registration_path, :class => 'navbar-link'  %> |
                      <%= link_to t('login'), new_user_session_path, :class => 'navbar-link'  %>
                    <% end %>
                  </p>
              </ul>

            </div>

        </div>
    </nav>

    <div class="container">
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>

        <%= yield %>
    </div>

     <script>
      
        $(document).ready(function(){
            $('.navbar-toggle').click(function(){
              $('#navbar').toggleClass('in')
            })
        });

     </script>


  </body>
</html>
